{
  "name": "editor-lite",
  "version": "0.1.0",
  "description": "The lightest WYSIWYG cross-browser editor. (IE9+)",
  "license": "MIT",
  "repository": "lukeed/editor-lite",
  "author": {
    "name": "Luke Edwards",
    "email": "luke@lukeed.com",
    "url": "lukeed.com"
  },
  "engines": {
    "node": ">=0.10.0"
  },
  "scripts": {
    "build": "webpack src -p dist/editor-lite.min.js",
    "test": "xo"
  },
  "main": "src/index.js",
  "files": [
    "dist",
    "src"
  ],
  "keywords": [
    "content",
    "contenteditable",
    "editable",
    "editor",
    "lightweight",
    "lite",
    "wysiwyg"
  ],
  "dependencies": {
    "dom-selection": "^0.3.0"
  },
  "devDependencies": {
    "webpack": "^1.13.1",
    "xo": "^0.14.0"
  },
  "xo": {
    "envs": ["browser", "node", "amd"],
    "rules": {
      "no-unused-expressions": 1,
      "quote-props": 1,
      "wrap-iife": 0,
      "one-var": 1,
      "curly": 1
    }
  }
}
